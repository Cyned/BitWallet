<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Send" android:background="@color/mainBackground">

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="wrap_content" android:layout_marginTop="16dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp" android:layout_marginStart="8dp"
	>
		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" app:srcCompat="?attr/homeAsUpIndicator"
				android:id="@+id/imageView7" android:layout_weight="0.2"/>
		<Button
				android:text="@string/WalletBtn"
				android:layout_width="wrap_content"
				android:layout_height="25dp" tools:layout_editor_absoluteY="84dp"
				tools:layout_editor_absoluteX="16dp" android:id="@+id/home" android:background="@color/mainBackground"
				style="@style/CommonUse" android:layout_weight="0.8" android:gravity="start"/>
	</LinearLayout>
	<TextView
			android:text="@string/sendTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView8"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" style="@style/CommonUse" android:textSize="17sp"
			android:layout_margin="16dp"/>
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" android:layout_marginRight="16dp"
			android:layout_marginTop="100dp">
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:layout_margin="16dp">
			<TextView
					android:text="@string/to"
					android:layout_width="wrap_content"
					android:layout_height="match_parent" android:id="@+id/textView10" android:layout_weight="0.1"
					style="@style/SilentHill" android:textSize="16sp"/>
			<TextView
					android:text="ddf422g...f232424"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="0.9"
					android:textSize="16sp" style="@style/CommonUse"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_marginBottom="16dp"
				android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
			<TextView
					android:text="@string/amount"
					android:layout_width="51dp"
					android:layout_height="match_parent" android:id="@+id/textView12" android:layout_weight="0.2"
					style="@style/SilentHill" android:textSize="16sp" android:gravity="center_vertical|end"
					android:padding="4dp"/>
			<EditText
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="number"
					android:ems="10"
					android:id="@+id/editText2" android:layout_weight="0.8" android:text="0.00"
					style="@style/SilentHill" android:textSize="16sp" android:padding="4dp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_marginBottom="16dp"
				android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
			<TextView
					android:text="@string/available"
					android:layout_width="48dp"
					android:layout_height="match_parent" android:id="@+id/textView12" android:layout_weight="0.1"
					style="@style/SilentHill" android:textSize="14sp" android:gravity="center_vertical|end"
					android:padding="4dp"/>
			<TextView
					android:text="5.53141"
					android:layout_width="wrap_content"
					android:layout_height="match_parent" android:id="@+id/textView16" android:layout_weight="0.9"
					style="@style/SilentHill" android:textSize="14sp" android:gravity="center_vertical"
					android:padding="4dp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_margin="16dp">
			<TextView
					android:text="@string/memo"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textView17" android:layout_weight="1"
					style="@style/SilentHill" android:textSize="16sp"/>
		</LinearLayout>
		<Button
				android:text="@string/send"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/send"
				android:background="@color/mainBackground" style="@style/CommonUse" android:textSize="20sp"
		/>
	</LinearLayout>
</android.support.constraint.ConstraintLayout>