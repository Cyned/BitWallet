<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Transactions" android:background="@color/mainBackground">

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:id="@+id/navbar"
			android:paddingLeft="10dp" android:paddingBottom="10dp" android:paddingTop="10dp"
			android:paddingRight="10dp" android:background="@color/authInput">
		<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp" android:src="@android:drawable/arrow_down_float"
				android:id="@+id/home" android:layout_weight="0.05"
				android:layout_margin="0dp" android:layout_marginStart="8dp"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp"
				android:visibility="visible" android:layout_marginRight="20dp"/>
		<TextView
				android:text="@string/transactionTitle"
				android:layout_height="wrap_content"
				android:id="@+id/title" style="@style/CommonUse"
				android:textSize="17sp"
				android:layout_weight="0.95"
				android:layout_width="wrap_content"
				android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
	</LinearLayout>
	<ScrollView
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
			android:scrollbars="none"
			android:layout_marginEnd="8dp" android:id="@+id/transactions" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/navbar">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintStart_toStartOf="parent"
				android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
				app:layout_constraintHorizontal_bias="1.0"
				android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
				android:layout_margin="16dp" android:id="@+id/list">
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/trans1">
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="match_parent" android:layout_weight="0.5" android:padding="4dp"
						android:id="@+id/status1">
					<TextView
							android:text="2 minutes ago"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/time1" style="@style/CommonUse"
							android:textSize="16sp"/>
					<TextView
							android:text="pending..."
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/statusMsg1" android:layout_weight="1"
							style="@style/SilentHill" android:textSize="14sp"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="match_parent" android:layout_weight="0.5" android:padding="4dp"
						android:id="@+id/amount1">
					<TextView
							android:text="0.100 BTC ^"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/amountBtc1" android:gravity="end"
							android:textSize="16sp" android:textColor="#198216"/>
					<TextView
							android:text="$292.23"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/amountDollar1" android:gravity="end"
							android:textSize="14sp" style="@style/SilentHill"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/trans2">
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="match_parent" android:layout_weight="0.5" android:padding="4dp">
					<TextView
							android:text="32 minutes ago"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/textView23" style="@style/CommonUse"
							android:textSize="16sp"/>
					<TextView
							android:text="pending..."
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/text24" android:layout_weight="1"
							style="@style/SilentHill" android:textSize="14sp"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="match_parent" android:layout_weight="0.5" android:padding="4dp">
					<TextView
							android:text="0.100 BTC ^"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/text25" android:gravity="end"
							android:textSize="16sp" android:textColor="#198216"/>
					<TextView
							android:text="$292.23"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/text26" android:gravity="end"
							android:textSize="14sp" style="@style/SilentHill"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/trans3">
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="match_parent" android:layout_weight="0.5" android:padding="4dp">
					<TextView
							android:text="3 hours ago"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/text27" style="@style/CommonUse"
							android:textSize="16sp"/>
					<TextView
							android:text="via sfhibj3q423njJKNF:E..."
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/text28" android:layout_weight="1"
							style="@style/SilentHill" android:textSize="14sp"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="match_parent" android:layout_weight="0.5" android:padding="4dp">
					<TextView
							android:text="0.100 BTC ^"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/text29" android:gravity="end"
							android:textSize="16sp" android:textColor="#198216"/>
					<TextView
							android:text="$292.23"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/text30" android:gravity="end"
							android:textSize="14sp" style="@style/SilentHill"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/trans4">
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="match_parent" android:layout_weight="0.5" android:padding="4dp">
					<TextView
							android:text="1 month ago"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/text31" style="@style/CommonUse"
							android:textSize="16sp"/>
					<TextView
							android:text="via jsdjgjsdgj64774HJFG..."
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/text32" android:layout_weight="1"
							style="@style/SilentHill" android:textSize="14sp"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="match_parent" android:layout_weight="0.5" android:padding="4dp">
					<TextView
							android:text="0.100 BTC ^"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/text33" android:gravity="end"
							android:textSize="16sp" android:textColor="#198216"/>
					<TextView
							android:text="$292.23"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/text34" android:gravity="end"
							android:textSize="14sp" style="@style/SilentHill"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</android.support.constraint.ConstraintLayout>