<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Login" android:background="@color/mainBackground">

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp" android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"
			android:id="@+id/loginHead" android:padding="20dp">
		<TextView
				android:text="Login"
				android:layout_width="match_parent"
				android:layout_height="match_parent" tools:layout_editor_absoluteY="1dp"
				tools:layout_editor_absoluteX="176dp" android:id="@+id/titleLogin"
				android:textColor="@color/colorAccent" android:textStyle="bold" android:textSize="30sp"
				android:gravity="center|center_vertical" android:padding="8dp"/>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/authInput" android:id="@+id/mailLayout"
				android:layout_marginBottom="16dp" android:layout_marginTop="16dp">
			<TextView
					android:text="MAIL:"
					android:layout_height="match_parent" android:id="@+id/mailText" android:layout_weight="0.15"
					android:textColor="@color/authComments"
					android:gravity="right|center_vertical" android:layout_marginRight="8dp"
					android:layout_width="0dp"/>
			<EditText
					android:layout_height="match_parent"
					android:inputType="textPersonName"
					android:text="test@mail.com"
					android:ems="10"
					android:id="@+id/mailInput" android:layout_weight="0.7" android:layout_width="0dp"
					android:textColor="@color/colorAccent"/>
			<Button
					android:text="x "
					android:layout_width="0dp"
					android:layout_height="match_parent" android:id="@+id/mailBtn" android:layout_weight="0.15"
					android:padding="4dp" android:background="@color/authComments"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_marginBottom="16dp"
				android:layout_marginTop="16dp" android:id="@+id/passLayout" android:background="@color/authInput">
			<TextView
					android:text="PASS:"
					android:layout_height="match_parent" android:layout_weight="0.15"
					android:textColor="@color/authComments" android:gravity="center_vertical|end"
					android:layout_marginRight="8dp" android:layout_width="0dp" android:id="@+id/passText"/>
			<EditText
					android:layout_height="wrap_content"
					android:inputType="textPersonName"
					android:text="****"
					android:ems="10"
					android:id="@+id/passInput" android:layout_weight="0.7" android:textColor="@color/colorAccent"/>
			<Button
					android:text=">"
					android:layout_width="0dp"
					android:layout_height="match_parent" android:id="@+id/login" android:layout_weight="0.15"
					android:background="@color/authHint"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="51dp" android:id="@+id/Register"
			app:layout_constraintTop_toBottomOf="@+id/loginHead" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:paddingLeft="8dp" android:paddingRight="8dp"
			android:layout_margin="8dp">
		<TextView
				android:text="No account yet?"
				android:layout_width="0dp"
				android:layout_height="match_parent" android:id="@+id/registerText" android:layout_weight="0.5"
				android:textColor="@color/authComments" android:layout_gravity="center"
				android:gravity="center_vertical|end" android:layout_marginRight="4dp"/>
		<TextView
				android:text="Register"
				android:layout_width="0dp"
				android:layout_height="match_parent" android:layout_weight="0.5"
				android:textColor="@color/authHint"
				android:layout_gravity="center" android:gravity="left|center_vertical" android:layout_marginLeft="4dp"
				android:id="@+id/registerBtn"/>
	</LinearLayout>
</android.support.constraint.ConstraintLayout>