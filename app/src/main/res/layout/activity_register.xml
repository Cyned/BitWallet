<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/mainBackground"
		tools:context=".Register">
	<ScrollView
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:id="@+id/scrollBar" android:scrollbars="none"
			android:scrollbarAlwaysDrawHorizontalTrack="false" android:background="@color/mainBackground"
			android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
			android:layout_marginBottom="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/registerLayout"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:padding="20dp" android:layout_gravity="center_vertical">
			<TextView
					android:text="@string/Register"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/registerTitle"
					android:textColor="@color/colorAccent"
					android:gravity="center_horizontal|center_vertical"
					android:textSize="30sp"
					android:padding="8dp"/>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/round_input"
					android:layout_marginBottom="16dp"
					android:layout_marginTop="16dp">
				<TextView
						android:text="@string/mailUpper"
						android:layout_height="match_parent"
						android:id="@+id/mailText"
						android:layout_weight="0.15"
						android:layout_width="0dp"
						android:textColor="@color/authComments"
						android:gravity="center|end"
				/>
				<EditText
						android:layout_height="match_parent"
						android:ems="10"
						android:id="@+id/mailInput"
						android:layout_weight="0.7"
						android:textColor="@color/colorAccent"
						android:layout_width="20dp" android:inputType="textWebEmailAddress|textEmailAddress"
						android:paddingLeft="4dp" android:paddingRight="4dp" android:importantForAutofill="no"
						tools:targetApi="o" tools:ignore="LabelFor"/>
				<ImageView
						android:src="@android:drawable/ic_notification_clear_all"
						android:layout_width="0dp"
						android:layout_height="match_parent" android:id="@+id/mailBtn" android:layout_weight="0.15"
						android:paddingLeft="15dp" android:paddingRight="15dp"
						android:contentDescription="@string/ClearDescription" android:tint="@color/clear"/>
			</LinearLayout>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/round_input"
					android:layout_marginBottom="16dp"
					android:layout_marginTop="16dp">
				<TextView
						android:text="@string/passUpper"
						android:layout_height="match_parent"
						android:id="@+id/passText"
						android:layout_weight="0.15"
						android:layout_width="0dp"
						android:textColor="@color/authComments"
						android:gravity="center|end"
				/>
				<EditText
						android:layout_width="20dp"
						android:layout_height="match_parent"
						android:inputType="date|textPassword|numberPassword"
						android:ems="10"
						android:id="@+id/passInput"
						android:layout_weight="0.7"
						android:textColor="@color/colorAccent" android:password="true" android:paddingLeft="4dp"
						android:paddingRight="4dp" android:importantForAutofill="no" tools:targetApi="o"
						tools:ignore="LabelFor"/>
				<ImageView
						android:src="@android:drawable/ic_notification_clear_all"
						android:layout_width="0dp"
						android:layout_height="match_parent" android:id="@+id/passBtn" android:layout_weight="0.15"
						android:paddingLeft="15dp" android:paddingRight="15dp"
						android:contentDescription="@string/ClearDescription" android:tint="@color/clear"/>
			</LinearLayout>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/round_input"
					android:layout_marginBottom="16dp"
					android:layout_marginTop="16dp">
				<TextView
						android:text="@string/passUpper"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:id="@+id/repPassText"
						android:layout_weight="0.15"
						android:textColor="@color/authComments"
						android:gravity="center|end"
				/>
				<EditText
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:inputType="textPersonName"
						android:ems="10"
						android:id="@+id/repPassInput"
						android:layout_weight="0.7"
						android:textColor="@color/colorAccent" android:password="true"
						android:paddingLeft="4dp"
						android:paddingRight="4dp" android:importantForAutofill="no" tools:targetApi="o"
						tools:ignore="LabelFor"/>
				<ImageView
						android:src="@mipmap/next"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:id="@+id/register"
						android:layout_weight="0.15"
						android:contentDescription="@string/Register"/>
			</LinearLayout>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/loginTitle"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="8dp"
					android:paddingLeft="8dp"
					android:paddingRight="8dp">
				<TextView
						android:text="@string/haveAcc"
						android:layout_height="wrap_content"
						android:id="@+id/loginText"
						android:layout_weight="0.3"
						android:textColor="@color/authComments"
						android:gravity="center_vertical|end"
						android:paddingRight="4dp"
						android:layout_width="wrap_content"
						android:paddingLeft="4dp"/>
				<TextView
						android:text="@string/Login"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/login"
						android:layout_weight="0.5"
						android:gravity="center_horizontal|start"
						android:textColor="@color/authHint"
						android:paddingLeft="4dp"
						android:paddingRight="4dp"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</android.support.constraint.ConstraintLayout>