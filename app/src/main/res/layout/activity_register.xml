<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Register" android:background="@color/mainBackground">
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/registerLayout" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:layout_marginTop="150dp"
			android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
			android:padding="20dp">
		<TextView
				android:text="Register"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/registerTitle"
				android:textColor="@color/colorAccent" android:gravity="center_horizontal|center_vertical"
				android:textSize="30sp" android:padding="8dp"/>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:background="@color/authInput"
				android:layout_marginBottom="16dp" android:layout_marginTop="16dp">
			<TextView
					android:text="MAIL:"
					android:layout_height="match_parent" android:id="@+id/mailText" android:layout_weight="0.15"
					android:layout_width="0dp" android:textColor="@color/authComments"
					android:layout_marginRight="8dp" android:gravity="center|end"/>
			<EditText
					android:layout_height="match_parent"
					android:inputType="textPersonName"
					android:text="test@mail.com"
					android:ems="10"
					android:id="@+id/mailInput" android:layout_weight="0.7" android:textColor="@color/colorAccent"/>
			<Button
					android:text="x "
					android:layout_width="0dp"
					android:layout_height="match_parent" android:id="@+id/mailBtn" android:layout_weight="0.15"
					android:background="@color/authComments"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:background="@color/authInput"
				android:layout_marginBottom="16dp" android:layout_marginTop="16dp">
			<TextView
					android:text="PASS:"
					android:layout_height="match_parent" android:id="@+id/passText" android:layout_weight="0.15"
					android:layout_width="0dp" android:textColor="@color/authComments"
					android:layout_marginRight="8dp" android:gravity="center|end"/>
			<EditText
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:inputType="textPersonName"
					android:text="****"
					android:ems="10"
					android:id="@+id/passInut" android:layout_weight="0.7" android:textColor="@color/colorAccent"/>
			<Button
					android:text="x "
					android:layout_height="match_parent" android:id="@+id/passBtn" android:layout_weight="0.15"
					android:layout_width="0dp" android:background="@color/authComments"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:background="@color/authInput"
				android:layout_marginBottom="16dp" android:layout_marginTop="16dp">
			<TextView
					android:text="PASS:"
					android:layout_width="0dp"
					android:layout_height="match_parent" android:id="@+id/repPassText" android:layout_weight="0.15"
					android:textColor="@color/authComments" android:layout_marginRight="8dp"
					android:gravity="center|end"/>
			<EditText
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:inputType="textPersonName"
					android:text="****"
					android:ems="10"
					android:id="@+id/repPassInput" android:layout_weight="0.7" android:textColor="@color/colorAccent"/>
			<Button
					android:text=">"
					android:layout_width="0dp"
					android:layout_height="match_parent" android:id="@+id/register" android:layout_weight="0.15"
					android:background="@color/authHint"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="0dp" android:id="@+id/loginTitle"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/registerLayout" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_margin="8dp"
			android:paddingLeft="8dp" android:paddingRight="8dp">
		<TextView
				android:text="Already have an account?"
				android:layout_height="wrap_content" android:id="@+id/loginText" android:layout_weight="0.7"
				android:textColor="@color/authComments" android:gravity="center_vertical|end"
				android:paddingRight="4dp"/>
		<TextView
				android:text="Login"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/login" android:layout_weight="0.3"
				android:gravity="center_horizontal|left" android:textColor="@color/authHint" android:paddingLeft="4dp"/>
	</LinearLayout>
</android.support.constraint.ConstraintLayout>